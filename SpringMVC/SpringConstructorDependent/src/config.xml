<?xml version="1.0" encoding="UTF-8"?>
<beans
xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
<bean id="add" class="Address">
<constructor-arg value="505" type="int"/>
<constructor-arg value="Hyderabad"/>
</bean>

<bean id="emp" class="Employee">
<constructor-arg value="Aniketh"/>
<constructor-arg value="160" type="int"/>
<constructor-arg value="25" type="int"/>
<constructor-arg value="Intellect"/>
<constructor-arg ><ref bean="add"/></constructor-arg>
</bean>                             
</beans>                 